{% extends 'base.html.twig' %}

{% block title %}Hello LocationController!{% endblock %}

{% block body %}

       <a href="{{ path('app_home') }}">Home</a><br />
       <div class="container my-12 mx-auto px-4 md:px-12">
    {% for location in locations %}

        {% for city in location.city %}
            {{ city.name }}
        {% endfor %}
        <h2 class="font-bold">Centri:</h2>
            {% for center in location.center %}
           <a href="{{ path('app_center/show', {id: center.id}) }}">
               {{ center.name }} | </a>
            {% endfor %}
       <h3 class="text-2xl font-bold">
           <a class="no-underline hover:underline text-black" href="{{ path('app_location/show', {'id': location.id})}}">
              {{ location.name }}
           </a></h3>
       <p> {{ location.description }} </p> <br />
       <p> {{ location.type.name }} </p>
       <p> {{ location.category.name }} </p> <br />

    {% endfor %}

</div>
{% endblock %}
